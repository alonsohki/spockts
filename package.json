{
  "name": "spockts",
  "version": "1.0.0",
  "description": "TypeScript transformed inspired in the Spock framework for testing",
  "main": "dist/main.js",
  "scripts": {
    "build": "ttsc",
    "lint": "eslint . --ext .ts",
    "lint:fix": "npm run lint -- --fix",
    "prettier:format": "prettier --config .prettierrc '{src,test}/**/*.ts' --write",
    "test": "npm-run-all test:unit test:usage",
    "test:unit": "jest --config test/jest.unit.config.ts",
    "test:unit:watch": "npm run test -- --watch",
    "test:usage": "jest --config test/jest.usage.config.ts",
    "test:usage:watch": "npm run test:usage -- --watch",
    "prepare": "husky install",
    "pre-commit": "lint-staged"
  },
  "author": "Alberto Alonso <alberto@alonso.xyz>",
  "license": "ISC",
  "dependencies": {
    "jison": "0.4.18"
  },
  "peerDependencies": {
    "typescript": ">=3.6.5"
  },
  "devDependencies": {
    "@types/jest": "27.4.1",
    "@types/node": "17.0.23",
    "@typescript-eslint/eslint-plugin": "5.18.0",
    "@typescript-eslint/parser": "5.18.0",
    "eslint": "8.13.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-airbnb-typescript": "17.0.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-jest": "26.1.4",
    "eslint-plugin-prettier": "4.0.0",
    "husky": "7.0.4",
    "jest": "27.5.1",
    "lint-staged": "12.3.7",
    "npm-run-all": "4.1.5",
    "prettier": "2.6.2",
    "ts-jest": "27.1.4",
    "typescript": "4.6.3",
    "ttypescript": "1.5.13",
    "typescript-transform-paths": "3.3.1"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write"
    ]
  },
  "files": [
    "dist",
    "README.md"
  ]
}
