{
  "compilerOptions": {
    "target": "es2021",
    "lib": ["es2021"],
    "module": "commonjs",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "rootDir": "..",
    "baseUrl": "../",
    "noEmit": true,
    "plugins": [
        { "transform": "typescript-transform-paths" },
    ],
    "paths": {
        "~/*": ["src/*"],
    },
    "typeRoots": ["../node_modules/@types", "../src"]
  },
  "exclude": ["jest.*.config.ts"]
}
  